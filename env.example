# Zuanga API environment variables
#
# This file is safe to commit. Copy it to `.env` and fill in real values.
#
# NOTE: The app reads a single set of keys (e.g., `DATABASE_URL`), so we provide
# Sandbox and Production templates below. Keep ONE set uncommented at a time.
#
# ------------------------------
# Common settings (all envs)
# ------------------------------

# Server port
PORT=3000

# Environment mode (commonly: development | production)
NODE_ENV=development

# API routing
API_VERSION=v1

# Security
CORS_ORIGIN=*
JWT_SECRET=change-me-in-real-env
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug
LOG_DIR=logs

# Vonage (OTP via Verify)
VONAGE_API_KEY=
VONAGE_API_SECRET=
VONAGE_BRAND=Zuanga

# ------------------------------
# Sandbox template (uncomment and fill)
# ------------------------------
# DATABASE_URL=postgres://user:password@sandbox-db-host:5432/zuanga_sandbox

# ------------------------------
# Production template (uncomment and fill)
# ------------------------------
# DATABASE_URL=postgres://user:password@prod-db-host:5432/zuanga_prod

